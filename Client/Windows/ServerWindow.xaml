<Window x:Class="Client.Windows.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="ServerWindow" Height="290" Width="300" Loaded="Window_Loaded">
    <StackPanel>
        <Border Width="92" Height="122" Background="Gray" Margin="0,20,0,0">
            <Image x:Name="imgSender" Width="90" Height="120" Stretch="Uniform"/>
        </Border>
        <TextBox x:Name="txtMessege" Height="90" VerticalScrollBarVisibility="Visible"
                 HorizontalContentAlignment="Center" Margin="10"/>
    </StackPanel>
</Window>
